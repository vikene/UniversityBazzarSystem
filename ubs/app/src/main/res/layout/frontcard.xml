<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/feedcard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#a8eae0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Club name"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:id="@+id/Clubname"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Clubname"
                android:paddingTop="15dp"
                android:textSize="20dp"
                android:text="Title of post"
                android:paddingStart="10dp"
                android:id="@+id/posttitle"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/posttitle"
                android:textSize="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="20dp"
                android:id="@+id/postcontent"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postcontent"
                android:id="@+id/clubComment"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:id="@+id/commentbutton"
                android:layout_below="@+id/clubComment"
                android:background="#fff"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                />


        </RelativeLayout>



    </android.support.v7.widget.CardView>
</RelativeLayout>